<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/partner_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_partnerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_marginTop="5dp"
            android:text="name"
            android:textSize="18sp"
            android:textStyle="bold|italic"/>

        <TextView
            android:id="@+id/txt_partner_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="2dp"
            android:background="@drawable/incoming"
            android:paddingStart="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:text="Hi, How are you ?"
            android:textColor="#000"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="end"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_myName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="#000"
            android:textSize="18sp"
            android:text="name"
            android:textStyle="bold|italic"/>

        <TextView
            android:id="@+id/my_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@drawable/outgoing"
            android:lineSpacingExtra="2dp"
            android:paddingStart="10dp"
            android:paddingTop="4dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp"
            android:text="Hi, How are you ?"
            android:textColor="#000"
            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>